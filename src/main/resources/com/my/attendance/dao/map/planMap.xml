<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN' 
	'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='com.my.attendance.dao.map.PlanMap'>
	<select id='selectPlans' resultType='plan'>
		select plan_title, plan_content
		from plans
	</select>
	
	<insert id='insertPlan'>
		insert into plans (plan_title, plan_content) 
		values (#{planTitle}, #{planContent})
	</insert>
	
	<update id='updatePlan'>
		update plans
		set plan_title = #{planTitle}, plan_content = #{planContent}
	</update>
	
	<delete id='deletePlan'>
		delete plans
		where plan_title = #{planTitle}, plan_content = #{planContent}
	</delete>
</mapper>	